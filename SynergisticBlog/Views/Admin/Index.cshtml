@model SynergisticBlog.Models.Post

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}

@section menu {
<ul class="tabs">
    <li id="page-login" class="active">
        <a>New Post</a>
    </li>
</ul>
}

@using (Html.BeginForm("Create", "Admin", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Post</legend>

        <div class="editor-field">
            @Html.TextBoxFor(model => model.Page, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.Page)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.UUID)
            @Html.ValidationMessageFor(model => model.UUID)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.TimeCreated)
            @Html.ValidationMessageFor(model => model.TimeCreated)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title, new { style = "width: 1500px;" })
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Content)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Content, new { rows = "20", cols = "100" })
            @Html.ValidationMessageFor(model => model.Content)
        </div>        
        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>


